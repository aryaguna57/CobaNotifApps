<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_data"
    android:padding="16dp">

    <ImageView
        android:id="@+id/status_red"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_circle_red"/>

    <ImageView
        android:id="@+id/status_green"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_circle_green"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="16dp"
        android:layout_marginBottom="6dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:id="@+id/ic_subtitle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_monetization_yellow"
        android:layout_alignLeft="@id/tvTitle"
        android:layout_below="@id/tvTitle"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtitle"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_below="@+id/tvTitle"
        android:layout_marginLeft="44dp"/>

    <ImageView
        android:id="@+id/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="362dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_delete_red" />

</RelativeLayout>